include "version.fbs";
include "link.fbs";
include "loginreq.fbs";
namespace ZDash.fbs;
table Connect {
  link		: LinkID;
  loginReq	: ZvUserDB.fbs.LoginReq;
}
union ReqData {
  Version	: VerReq,
  MkLink	: LinkData,
  RmLink	: LinkID,
  Connect	: Connect,
  Disconnect	: LinkID,
  Links		: LinkQuery,
  Select	: LinkID
}
table Request {
  seqNo		: uint64;	// request ID (restarts at 0 with each session)
  data		: ReqData;
}
root_type Request;
