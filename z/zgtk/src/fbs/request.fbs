include "version.fbs";
include "link.fbs";
namespace ZDash.fbs;
table Connect {
  server	: string;
  port		: uint16;
}
union ReqData {
  Version	: VerReq,
  Connect	: Connect,
  Disconnect	: LinkID,
  Links		: LinkList,
  Select	: LinkID
}
table Request {
  seqNo		: uint64;	// request ID (restarts at 0 with each session)
  data		: ReqData;
}
root_type Request;
